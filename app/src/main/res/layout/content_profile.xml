<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="bvgiants.diary3.ProfileActivity">

    <!-- Profile -->

    <ImageView
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/profile1"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <!-- First Name -->
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:id="@+id/first_name"
            android:hint= "First Name"
            android:singleLine="true"
            android:layout_marginTop="180dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/fname"
        android:layout_marginStart="-42dp"
        android:layout_marginTop="130dp"/>


    <!-- Last Name -->
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:id="@+id/lastName"
            android:hint= "Last Name"
            android:singleLine="true"
            android:layout_marginTop="230dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"/>

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/lname"
        android:layout_marginStart="-43dp"
        android:layout_marginTop="177dp"/>

    <!-- Height -->
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:id="@+id/height"
            android:hint="Height (cms)"
            android:inputType="number"
            android:singleLine="true"
            android:layout_marginTop="280dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"/>
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/measure1"
        android:layout_marginTop="267dp"/>

    <!-- Weight -->
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:hint= "Weight (kgs)"
            android:inputType="number"
            android:singleLine="true"
            android:layout_marginTop="330dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:id="@+id/weight"
            />
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/weight"
        android:layout_marginTop="314dp"
        android:layout_marginStart="-6dp"/>

    <!-- Age -->
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:id="@+id/age"
            android:hint= "Age"
            android:inputType="number"
            android:singleLine="true"
            android:layout_marginTop="380dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"/>
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/birthday"
        android:layout_marginTop="365dp"/>

    <!-- Gender -->
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:id="@+id/gender"
            android:hint= "Gender"
            android:singleLine="true"
            android:layout_marginTop="430dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"/>
    <ImageView
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:src="@drawable/gender"
        android:layout_marginTop="415dp"/>

    <!-- Save Button -->
        <Button
            android:id="@+id/save_button"
            style="?android:textAppearanceSmall"
            android:background="@drawable/buttonchanges"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>
