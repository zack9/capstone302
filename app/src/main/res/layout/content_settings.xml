<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bvgiants.diary3.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <!--\\\\\\\ Heading ///////-->



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:id="@+id/settingsTitle" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="User Profile"
        style="?android:textAppearanceSmall"
        android:id="@+id/buttonProfile"
        android:background="@drawable/buttonchanges"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/buttonGoals"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Set Goals"
        style="?android:textAppearanceSmall"
        android:id="@+id/buttonGoals"
        android:background="@drawable/buttonchanges"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Select Avatar"
        style="?android:textAppearanceSmall"
        android:id="@+id/buttonAvatar"
        android:background="@drawable/buttonchanges"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/buttonProfile"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Change Theme"
        style="?android:textAppearanceSmall"
        android:id="@+id/buttonTheme"
        android:background="@drawable/buttonchanges"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/buttonAvatar" />


</RelativeLayout>
