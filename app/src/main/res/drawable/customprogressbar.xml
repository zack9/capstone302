<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dip"/>
            <stroke android:width="1dip" android:color="#0e1b242b" />
            <gradient
                android:startColor="#8a629bb6"
                android:centerColor="#9a6bb5e1"
                android:centerY=" 1.0"
                android:endColor="#c2b39b9b"
                android:angle="45"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dip"/>
                <stroke android:width="1dip" android:color="#eb437360" />
                <gradient
                    android:startColor="#87ac59"
                    android:centerColor="#4c746f"
                    android:centerY="2.0"
                    android:endColor="#90a960"
                    android:angle="45"
                    />
            </shape>
        </clip>
    </item>
</layer-list>

